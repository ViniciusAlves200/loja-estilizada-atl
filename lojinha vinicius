                <label for="produto">Produto:</label>
                <select id="produto" name="produto">
                    <option value="iphone">iPhone</option>
                    <option value="airpods">AirPods</option>
                    <option value="macbook">MacBook</option>
                    <option value="capinha-iphone">Capinha de iPhone</option>
                    <option value="carregador-iphone">Carregador de iPhone</option>
                    <option value="capinha-macbook">Capinha de MacBook</option>
                    <option value="carregador-macbook">Carregador de MacBook</option>
                    <option value="capinha-airpods">Capinha de AirPods</option>
                </select>
                <br>
                <label for="quantidade">Quantidade:</label>
                <input type="number" id="quantidade" name="quantidade" min="1" value="1">
                <br>
                <label for="pagamento">Forma de Pagamento:</label>
                <select id="pagamento" name="pagamento">
                    <option value="dinheiro">Dinheiro</option>
                    <option value="cartao">Cartão</option>
                </select>

                <button type="submit">Registrar Venda</button>
            </form>
            </center>
        </section>
    </main>

    <footer>
        <center>
        <p>Start of 01 $tore 2k24!</p>
        </center>
    </footer>

    <script>
        const form = document.getElementById('form-venda');

        form.addEventListener('submit', function(event) {
            event.preventDefault();
            const produto = document.getElementById('produto').value;
            const quantidade = document.getElementById('quantidade').value;
            const pagamento = document.getElementById('pagamento').value;

            alert(`Venda registrada: ${quantidade}x ${produto} - Pagamento: ${pagamento}`);
        });
    </script>
</body>
</html>


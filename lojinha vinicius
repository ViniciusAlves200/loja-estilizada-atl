    <label for="filtro-data">Filtrar por data:</label>
    <input type="text" id="filtro-data" placeholder="Ex: 03 de Outubro de 2024">
    <button id="btn-filtrar">Filtrar</button>

    <script>
        const btnFiltrar = document.getElementById('btn-filtrar');
        const filtroData = document.getElementById('filtro-data');
        const tabelaVendas = document.querySelector('tbody');

        btnFiltrar.addEventListener('click', function() {
            const data = filtroData.value.toLowerCase();
            const vendas = tabelaVendas.getElementsByTagName('tr');
            for (let i = 0; i < vendas.length; i++) {
                const venda = vendas[i].textContent.toLowerCase();
                if (venda.includes(data)) {
                    vendas[i].style.display = '';
                } else {
                    vendas[i].style.display = 'none';
                }
            }
        });
    </script>
</body>
</html>

